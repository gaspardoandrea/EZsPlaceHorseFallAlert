<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="horse_name"
        android:title="@string/pref_title_horse_name"
        android:defaultValue="@string/pref_default_horse_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="delay"
        android:title="@string/pref_title_delay"
        android:defaultValue="@string/pref_default_delay"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />


    <EditTextPreference
        android:key="phone"
        android:title="@string/pref_title_phone"
        android:defaultValue="@string/pref_default_phone"
        android:selectAllOnFocus="true"
        android:inputType="textMultiLine"
        android:maxLines="5" />

    <CheckBoxPreference
        android:key="sms"
        android:title="@string/pref_title_sms"
        android:defaultValue="@bool/pref_default_sms" />

    <EditTextPreference
        android:key="alpha"
        android:title="@string/pref_title_alpha"
        android:defaultValue="@string/pref_default_alpha"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="nr_of_calls"
        android:title="@string/pref_title_nr_of_calls"
        android:defaultValue="@string/pref_default_nr_of_calls"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="delay_between_calls"
        android:title="@string/pref_title_delay_between_calls"
        android:defaultValue="@string/pref_default_delay_between_calls"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="debug"
        android:title="@string/pref_title_debug"
        android:defaultValue="@bool/pref_default_debug" />
</PreferenceScreen>
